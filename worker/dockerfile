# worker/Dockerfile

# ---- builder stage ----
FROM maven:3.9.6-eclipse-temurin-21-alpine AS builder

WORKDIR /build

# copy pom.xml and resolve dependencies first (cached)
COPY pom.xml .
RUN mvn dependency:resolve

# copy source and package
COPY src ./src
RUN mvn package -DskipTests

# ---- runtime stage ----
FROM eclipse-temurin:21-jre-alpine

WORKDIR /app

# Copy the jar from builder stage
COPY --from=builder /build/target/worker-jar-with-dependencies.jar ./worker-jar-with-dependencies.jar

# Use environment variables for connection details (do NOT hardcode)
# Run the worker
CMD ["java", "-jar", "worker-jar-with-dependencies.jar"]
